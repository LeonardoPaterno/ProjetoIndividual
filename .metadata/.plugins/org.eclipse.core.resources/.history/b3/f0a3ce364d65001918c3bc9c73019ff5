	<script>
		$("#botao-icone-menu").click(function(e) {
			e.preventDefault();
			$("#barra-lateral").toggle();
		});

		$(".icone-adicionar-aparelho").click(function() {
			$('#modalaparelho').modal('show');
		});
		
		$(".botao-salvar").click(function(){
			$('#modalaparelho').modal('hide');
		});
	</script>
